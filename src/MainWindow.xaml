<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Elternportal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elternportal"
        mc:Ignorable="d"
        Title="Elternportal Client v0.1" Height="800" Width="1200" Closing="Main_Window_Closing"
				  >

	<mah:MetroWindow.RightWindowCommands>
		<mah:WindowCommands>
			<Button x:Name="settings" Click="settings_Click">Einstellungen</Button>
			<Button x:Name="platz" Focusable="False" Grid.Column="1">Placeholder</Button>
		</mah:WindowCommands>
	</mah:MetroWindow.RightWindowCommands>

		



		<TabControl x:Name="catg" HorizontalAlignment="Stretch" Margin="5,5,0,0">
			<TabItem Header="Stundenplan">
				<TextBlock Text="Stundenplan"/>
			</TabItem>
			<TabItem Header="Vertretungen" >
				<TextBlock Text="Vertretungen"/>
			</TabItem>
			<TabItem Header="Elternbriefe" >
				<TextBlock Text="Elternbriefe"/>
			</TabItem>
		</TabControl>

</mah:MetroWindow>
